{
  "dashboard": {
    "title": "Anomaly Detection Dashboard",
    "tags": ["anomalies", "detection", "analytics"],
    "timezone": "browser",
    "refresh": "10s",
    "schemaVersion": 38,
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "Anomaly Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "service_anomaly_rate",
            "legendFormat": "Anomaly Rate %",
            "datasource": {
              "type": "prometheus",
              "uid": "${datasource}"
            },
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 2,
        "title": "Total Anomalies Detected",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "service_anomalies_total",
            "legendFormat": "Total Anomalies",
            "datasource": {
              "type": "prometheus",
              "uid": "${datasource}"
            },
            "refId": "A"
          },
          {
            "expr": "rate(service_anomalies_total[1m]) * 60",
            "legendFormat": "Anomalies/min",
            "datasource": {
              "type": "prometheus",
              "uid": "${datasource}"
            },
            "refId": "B"
          }
        ]
      },
      {
        "id": 3,
        "title": "Prediction Value (Rolling Average)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "service_prediction_value",
            "legendFormat": "Predicted RPS",
            "datasource": {
              "type": "prometheus",
              "uid": "${datasource}"
            },
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "Anomaly Alert Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(service_anomalies_total[1m]) * 60",
            "legendFormat": "Anomalies/min",
            "datasource": {
              "type": "prometheus",
              "uid": "${datasource}"
            },
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      }
    ]
  }
}